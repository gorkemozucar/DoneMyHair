@model HairDresser1.Models.HairDresserModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create new Hairdresser</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data" asp-controller="HairDresser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="HairdresserName" class="control-label"></label>
                <input asp-for="HairdresserName" class="form-control" />
                <span asp-validation-for="HairdresserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HairdresserSurname" class="control-label"></label>
                <input asp-for="HairdresserSurname" class="form-control" />
                <span asp-validation-for="HairdresserSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HairdresserPhoneNumber" class="control-label"></label>
                <input asp-for="HairdresserPhoneNumber" class="form-control" />
                <span asp-validation-for="HairdresserPhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HairdresserEmail" class="control-label"></label>
                <input asp-for="HairdresserEmail" class="form-control" />
                <span asp-validation-for="HairdresserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HairdresserDescription" class="control-label"></label>
                <input asp-for="HairdresserDescription" class="form-control" />
                <span asp-validation-for="HairdresserDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="custom-file">
                    <input asp-for="Image" class="custom-file-input" id="customFile">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
