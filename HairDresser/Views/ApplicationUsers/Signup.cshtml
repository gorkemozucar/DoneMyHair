@model SignupModel
@{ 
    ViewBag.Title = "Sign UP";
}

<form asp-action="Signup" method="post" enctype="multipart/form-data" asp-controller="ApplicationUsers">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <h3>Sign Up Here</h3>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.UserType, htmlAttributes: new { @class = "control-label" })
        <div>
            Saloon Manager
            @Html.RadioButtonFor(model => model.UserType, "saloon")
            Customer
            @Html.RadioButtonFor(model => model.UserType, "user")
        </div>
    </div>
    <div class="form-group">
        <label style="font-size:22px">I agree to the Terms of Service and Privacy Policy</label>
        
        <input asp-for="Terms" type="checkbox" class="form-control" />
        
        <span asp-validation-for="Terms" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    <p style="margin-top: 10px;">Already have an account ? <a asp-action="Login" asp-controller="ApplicationUsers">Login</a></p>
    <div class="divider">Or Signup With</div>
    <div class="social">
        <div class="go"><i class="fab fa-google"></i>  Google</div>
        <div class="fb"><i class="fab fa-facebook"></i>  Facebook</div>
    </div>
</form>